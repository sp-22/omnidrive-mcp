{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OmniDrive",
  "version": "0.1.0",
  "identifier": "com.omnidrive.desktop",
  "build": {
    "beforeDevCommand": "npm run build:sidecar && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:sidecar && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OmniDrive",
        "width": 1100,
        "height": 720,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/omnidrive_server"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}